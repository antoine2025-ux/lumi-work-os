# Production Environment Configuration
# Copy this to .env.production for production deployment

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/lumi_work_os?schema=public"
DIRECT_URL="postgresql://username:password@localhost:5432/lumi_work_os?schema=public"

# Docker Compose Database Configuration
POSTGRES_DB="lumi_work_os"
POSTGRES_USER="lumi_user"
POSTGRES_PASSWORD="your-secure-postgres-password"

# PgAdmin Configuration
PGADMIN_EMAIL="admin@yourdomain.com"
PGADMIN_PASSWORD="your-secure-pgadmin-password"

# NextAuth
NEXTAUTH_URL="https://your-production-domain.com"
NEXTAUTH_SECRET="your-production-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"

# AI Providers
OPENAI_API_KEY="your-production-openai-api-key"
ANTHROPIC_API_KEY="your-production-anthropic-api-key"

# Supabase (for file storage)
NEXT_PUBLIC_SUPABASE_URL="your-production-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-production-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-production-supabase-service-role-key"

# Socket.IO (optional - for real-time features)
NEXT_PUBLIC_ENABLE_SOCKET_IO="false"

# Feature Flags
NEXT_PUBLIC_USE_NEW_LAYOUT="true"

# Production Security Flags
ALLOW_DEV_LOGIN="false"
PROD_LOCK="true"
ENABLE_ASSISTANT="true"

# Blog Admin Authentication
# REQUIRED: Set a strong, random password for blog admin access
# This password is required to access /blog/admin
BLOG_ADMIN_PASSWORD="your-strong-random-password-here"

# Node Environment
NODE_ENV="production"
PORT="3000"

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Logging
LOG_LEVEL="info"

# File Upload
MAX_FILE_SIZE="10mb"

