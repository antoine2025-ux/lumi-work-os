# Database
DATABASE_URL="postgresql://username:password@localhost:5432/lumi_work_os?schema=public"
DIRECT_URL="postgresql://username:password@localhost:5432/lumi_work_os?schema=public"

# Docker Compose Database Configuration
POSTGRES_DB="lumi_work_os"
POSTGRES_USER="lumi_user"
POSTGRES_PASSWORD="your-secure-postgres-password"

# PgAdmin Configuration
PGADMIN_EMAIL="admin@yourdomain.com"
PGADMIN_PASSWORD="your-secure-pgadmin-password"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Slack Integration (for token refresh)
SLACK_CLIENT_ID="your-slack-client-id"
SLACK_CLIENT_SECRET="your-slack-client-secret"

# AI Providers
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Supabase (for file storage)
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Socket.IO (optional - for real-time features)
# Set to "true" to enable Socket.IO real-time features
# Requires running "npm run dev:realtime" instead of "npm run dev"
NEXT_PUBLIC_ENABLE_SOCKET_IO="false"

# Feature Flags
# Set to "true" to enable the new project layout with circular buttons
NEXT_PUBLIC_USE_NEW_LAYOUT="false"

# Auth and Development Flags
# Set to "true" to allow development login bypasses (dev@lumi.local)
ALLOW_DEV_LOGIN="true"
# Set to "true" to lock production features and disable dev bypasses
PROD_LOCK="false"
# Set to "true" to enable AI assistant features
ENABLE_ASSISTANT="true"

# Development User Configuration (optional)
# DEV_USER_EMAIL="dev@lumi.local"
# DEV_USER_NAME="Development User"

# Blog Admin Authentication
# Password required for accessing /blog/admin
# Set a strong password in production!
BLOG_ADMIN_PASSWORD="your-secure-blog-admin-password"
