# Staging Environment Configuration Template
# Phase 2 Pre-Beta Hardening
# Copy this to .env.staging and update with actual values

# Database
DATABASE_URL="postgresql://staging_user:staging_password@staging-db:5432/lumi_work_os_staging?schema=public"
DIRECT_URL="postgresql://staging_user:staging_password@staging-db:5432/lumi_work_os_staging?schema=public"

# NextAuth
NEXTAUTH_URL="https://staging.lumi-work-os.com"
NEXTAUTH_SECRET="staging-secret-key-change-in-production"

# OAuth Providers
GOOGLE_CLIENT_ID="staging-google-client-id"
GOOGLE_CLIENT_SECRET="staging-google-client-secret"

# AI Providers
OPENAI_API_KEY="staging-openai-api-key"
ANTHROPIC_API_KEY="staging-anthropic-api-key"

# Supabase (for file storage)
NEXT_PUBLIC_SUPABASE_URL="staging-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="staging-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="staging-supabase-service-role-key"

# Socket.IO
NEXT_PUBLIC_ENABLE_SOCKET_IO="true"

# Feature Flags
NEXT_PUBLIC_USE_NEW_LAYOUT="true"

# Phase 2: Auth and Development Flags - STAGING HARDENING
# Set to "false" to disable development login bypasses in staging
ALLOW_DEV_LOGIN="false"
# Set to "true" to lock production features and disable dev bypasses
PROD_LOCK="true"
# Set to "true" to enable AI assistant features
ENABLE_ASSISTANT="true"

# Environment
NODE_ENV="production"

